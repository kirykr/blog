<div class="page-header">
  <h1>Articles#index</h1>
</div>
<p><%= link_to "Create New Article", new_article_path %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.description %></td>
      <td><%= link_to '<i class="fa fa-edit fa-fw"></i> Edit'.html_safe, edit_article_path(article.id), class: 'btn btn-info btn-xs' %>
      <%= link_to '<i class="fa fa-eye fa-fw"></i> show'.html_safe, article_path(article.id), class: 'btn btn-warning btn-xs' %>
      <%= link_to '<i class="fa fa-trash fa-fw"></i> Delelte'.html_safe, article_path(article.id),  class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: "Are you sure, you want to delete this?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>  