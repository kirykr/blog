<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'layouts/navigation'  %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% flash.each do |name, msg| %>
          <ul>
            <li><%= msg %></li>
          </ul>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  </body>
</html>
